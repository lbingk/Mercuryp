<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mercuryAuthority="http://www.mercuryp-rpc.org/schema/mercuryp-common"
       xmlns:mercuryRpc="http://www.mercuryp-rpc.org/schema/mercuryp-rpc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.mercuryp-rpc.org/schema/mercuryp-common http://www.mercuryp-rpc.org/mercuryp/mercuryp-common.xsd
        http://www.mercuryp-rpc.org/schema/mercuryp-rpc http://www.mercuryp-rpc.org/mercuryp/mercuryp-rpc.xsd">

    <mercuryAuthority:authoritySocketBean ip="localhost" port="2181" timeout="5000"/>

    <mercuryRpc:providerSocketBean ip="localhost" port="20880" timeout="5000"/>

</beans>